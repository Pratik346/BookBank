            <input type="hidden" name="category" value="Arts" >
            <button type="submit" class="filter">
            <i class="fa-solid fa-earth-europe"></i>
            </button>
            <p>Arts</p>
        </form>
          <form action="/book" method="get">
            <input type="hidden" name="category" value="Mathematics" >
            <button type="submit" class="filter">
            <i class="fa-solid fa-calculator"></i>
            </button>
            <p>Mathematics</p>
        </form>
              <form action="/book" method="get">
            <input type="hidden" name="category" value="Others" >
            <button type="submit" class="filter">
          <i class="fa-solid fa-book-atlas"></i>
            </button>
            <p>Others</p>
        </form>
        </div>
    <h2 class="underline offset-5">All Books</h2>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
           <%for(let book of allbooks){%>
        <a href="/book/<%=book._id%>" class="book-link">
    <div class="card col book-card" style="width: 18rem;">
  <img src="<%=book.imageUrl%>" class="card-img-top" alt="Book image" style="width: 18rem;" >
  <div class="card-img-overlay">Books</div>
  <div class="card-body">
    <p class="card-text"><b><%=book.title%></b><br>
       &#8377;<%=book.price.toLocaleString("en-IN")%><br> 
    </p>
  </div>
</div>
</a>
<%}%>
</div>
