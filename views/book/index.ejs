<%layout("/layouts/boilerplate")%>
<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        justify-content:space-evenly;
        margin-bottom:2rem;
    }
    .filter{
        margin-right:  1rem;
        margin-top: 1rem;
        text-align: center;
        opacity:0.5;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
    form button{
        width:2rem;
        border:none;
    }
    </style>
<div id="filters" >
        <form action="/book" method="get">
            <input type="hidden" name="category" value="Fiction" >
            <button type="submit" class="filter">
            <i class="fa-solid fa-rocket"></i>
            </button>
