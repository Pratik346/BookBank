        </form>
        <form action="/book" method="get">
            <input type="hidden" name="category" value="Science" >
            <button type="submit" class="filter">
            <i class="fa-solid fa-atom"></i>
            </button>
            <p>Science</p>
            
        </form>
        <form action="/book" method="get">
            <input type="hidden" name="category" value="Education" >
            <button type="submit" class="filter">
            <i class="fa-solid fa-graduation-cap"></i>
            </button>
            <p>Education</p>
        </form>
        <form action="/book" method="get">
            <input type="hidden" name="category" value="Technology" >
            <button type="submit" class="filter">
            <i class="fa-solid fa-laptop-code"></i>
            </button>
            <p>Technology</p>
            
        </form>
        <form  action="/book" method="get">
            <input type="hidden" name="category" value="Children" >
            <button type="submit" class="filter">
            <i class="fa-solid fa-child"></i>
            </button>
            <p>Children</p>
        </form>
        <form action="/book" method="get">
            <input type="hidden" name="category" value="Biography" >
            <button type="submit" class="filter">
            <i class="fa-solid fa-book"></i>
            </button>
            <p>Biography</p>
        </form>
        <form action="/book" method="get">
            <input type="hidden" name="category" value="Comics" >
            <button type="submit" class="filter">
            <i class="fa-solid fa-book-open"></i>
            </button>
            <p>Comics</p>
        </form>
        <form action="/book" method="get">
            <input type="hidden" name="category" value="Religion" >
            <button type="submit" class="filter">
            <i class="fa-solid fa-hands-praying"></i>
            </button>
