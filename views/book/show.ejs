<%layout("/layouts/boilerplate")%>
<body>
    <h2 class="underline offset-2">Book Details</h2>
    <div class="row">
      <div class="col-12 justify-content-center">
          <div class="card col-12 col-sm-10 col-md-8 col-lg-6 book-card">
  <img src="<%=book.imageUrl%>" class="card-img-top show-img" alt="Book-image">
  <div class="card-body">
    <p class="card-text offset-2">
      <b><%=book.title%></b>
      <br>
      <%=book.description%><br><br>
      By:<%=book.author%><br>
        Price:&#8377;<%=book.price.toLocaleString("en-IN")%><br>
        Category:<%=book.category%><br>
        Quantity Available:<%=book.quantity%>
        <br>
          <a href="/user/details/<%=book.id%>" class="btn btn-sm btn-primary">Seller Details</a>
    </p>
  </div>
</div>
      </div>
    </div>
    <%if(curruser && curruser._id.equals(book.owner._id)){%>
    <a href="/book/<%=book._id%>/edit" class="btn btn-warning mb-2 offset-3 btn-sm">Edit Book</a>
    <br>
    <form method="post" action="/book/<%=book._id%>?_method=DELETE">
        <button class="btn btn-danger btn-sm offset-3">Delete</button>
    </form>
  <%}%>
    <hr>
    <%if(curruser){%>
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 justify-content-center">
      <h4>Write a Review</h4>
      <form action="/book/<%=book._id%>/reviews" method="post" novalidate class="needs-validation">
    <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot">
  <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="rating" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="rating" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="rating" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="rating" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="rating" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
</div>
      <div>
        <label for="comment" class="form-label">Comment</label>
        <textarea name="comment" id="comment" cols="30" rows="5" class="form-control" required></textarea>
        <div class="invalid-feedback">Please add a comment</div>
        <div class="valid-feedback">Ok</div>
      </div>
      <br>
      <button class="btn btn-sm btn-primary mb-2">Submit</button>
      </form>
      <hr>
    <%}%>
      <h4>All Reviews</h4>
      <div class="row">
        <%for(review of book.reviews){%>
        <div class="card col-5 mb-3 ms-3">
          <div class="card-body">
            <h5 class="card-title">@<%=review.author.username%></h5>
            <p class="card-text"><%=review.comment%></p>
            <p class="card-text"><%=review.rating%><i class="fa-regular fa-star reviewstar"></i></p>
          </div>
          <form class="mb-3" method="post" action="/book/<%=book._id%>/reviews/<%=review._id%>?_method=DELETE">
            <button class="btn btn-sm btn-danger">Delete</button>
          </form>
        </div>
      <%}%>
      </div>
    </div>
</body>
